{
  "name": "url-shortener",
  "version": "0.1.0",
  "description": "Modern serverless URL shortener using Azure and Cloudflare",
  "private": true,
  "workspaces": [
    "workers",
    "functions",
    "web",
    "landing"
  ],
  "scripts": {
    "test": "npm run test:functions && npm run test:web",
    "test:functions": "npm test --workspace=functions",
    "test:web": "npm test --workspace=web",
    "test:watch": "npm run test:functions -- --watch",
    "test:coverage": "npm run test:functions -- --coverage",
    "lint": "eslint . --ext .js,.ts",
    "format": "prettier --write \"**/*.{js,ts,json,md}\""
  },
  "keywords": [
    "url-shortener",
    "azure",
    "cloudflare",
    "serverless"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0"
  }
}
